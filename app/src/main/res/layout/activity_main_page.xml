<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_add"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="18dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#D3D3D3"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/new_product"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_edit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="18dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#D3D3D3"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_allincome"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#D3D3D3"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/income"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_allpayments"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#D3D3D3"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/reducing_costs_590x315"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_delete_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#D3D3D3"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/delete"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_search_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#D3D3D3"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/mysearch"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>