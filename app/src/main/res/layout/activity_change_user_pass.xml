<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_user_pass">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="120dp"
        app:cardElevation="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#80ff00"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textColor="#f00"
            android:gravity="center"
            android:text="Change UserName and Password "/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/change_userold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter old user name"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/change_et_olduser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="old UserName"
        android:layout_toEndOf="@+id/change_userold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/change_passold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter old password"
        android:layout_below="@+id/change_userold"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/change_et_oldpass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="old password"
        android:inputType="textPassword"
        android:layout_below="@+id/change_et_olduser"
        android:layout_toEndOf="@+id/change_userold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/change_usernew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new user name"
        android:textStyle="bold"
        android:layout_below="@+id/change_passold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/change_et_newuser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="new UserName"
        android:layout_below="@+id/change_et_oldpass"
        android:layout_toEndOf="@+id/change_userold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/change_passnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new password"
        android:layout_below="@+id/change_usernew"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/change_et_newpass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="new password"
        android:inputType="textPassword"
        android:layout_below="@+id/change_et_newuser"
        android:layout_toEndOf="@+id/change_userold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/change_confuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conf new username"
        android:textStyle="bold"
        android:layout_below="@+id/change_passnew"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="55dp"/>
    <EditText
        android:id="@+id/change_et_confuser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_et_newpass"
        android:layout_toEndOf="@+id/change_userold"
        android:hint="conf new username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/change_confpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_confuser"
        android:text="Conf new Password"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="55dp"/>
    <EditText
        android:id="@+id/change_et_confpass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_et_confuser"
        android:layout_toEndOf="@+id/change_userold"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:hint="conf new Password"/>

    <Button
        android:id="@+id/change_btn_savechange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:layout_below="@+id/change_confpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>







</RelativeLayout>