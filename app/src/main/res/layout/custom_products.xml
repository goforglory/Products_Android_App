<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:background="#DCDCDC"
    android:rowCount="7"
    android:layout_margin="20dp"
    tools:ignore="UselessParent">

    <ImageView
        android:layout_rowSpan="7"
        android:layout_columnSpan="1"
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/prologo2" />

    <TextView
        android:id="@+id/custom_tv_id"
        android:textStyle="bold"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : " />

    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_id_data"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:text="0" />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_cat"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category : " />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_cat_data"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="" />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_TM"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="trade mark : " />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_TM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:text="" />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_selling_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Selling Price : " />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_selling_price_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:text="0" />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Purchase Price : " />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_purchase_price_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:text="0" />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_quantityperunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Quantity per unit : " />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_quantityperunit_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:text="0" />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_available_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="All available quantity : " />
    <TextView
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_tv_available_quantity_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:text="0" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/custom_edit_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:layout_columnSpan="3"
        android:text="Edit"  />
</GridLayout>
</RelativeLayout>