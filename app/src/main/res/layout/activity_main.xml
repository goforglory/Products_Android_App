<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shopping_cart_racing"
            />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_txtuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName : "
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginStart="40dp"
            />
        <EditText
            android:id="@+id/main_et_user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="userName"
            android:layout_toEndOf="@+id/main_txtuser"
            android:layout_marginStart="35dp"
            android:layout_marginTop="50dp"

            />

        <TextView
            android:id="@+id/main_txtpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textStyle="bold"
            android:layout_below="@+id/main_txtuser"
            android:layout_marginTop="35dp"
            android:layout_marginStart="40dp"
            />
        <EditText
            android:id="@+id/main_et_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="password"
            android:layout_below="@id/main_et_user"
            android:inputType="textPassword"
            android:layout_toEndOf="@+id/main_txtuser"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"

            />
        <Button
            android:id="@+id/main_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:layout_below="@+id/main_txtpass"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            />
        <Button
            android:id="@+id/main_btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change user pass"
            android:layout_below="@+id/main_et_pass"
            android:layout_toEndOf="@+id/main_btn_login"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            />





    </RelativeLayout>
</LinearLayout>